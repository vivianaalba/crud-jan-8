<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>
        <h1>Enter user</h1>
        <form action="/users" method="POST">
            <input type="text" id="username" placeholder="New Username" name="username" />
            <input type="text" id="password" placeholder="New Password" name="password" />
            <button type="submit">Submit</button>
        </form>
        <button id="update-button">Replace password</button>
        <button id="delete-button">delete user</button>
        <ul class="users">
            <% for(var i=0; i < usersCollection.length; i++) {%>
                <li class="user">
                    <!-- Output name from the iterated user object -->
                    <span>
                        <%= usersCollection[i].username %>
                    </span>:
                    <!-- Output quote from the iterated user object -->
                    <span>
                        <%= usersCollection[i].password %>
                    </span>
                    <button id="edit-button">Edit</button>
                </li>
                <% } %>
        </ul>
        <script src="../public/main.js"></script>
    </body>
</html>
