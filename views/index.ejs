<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>
        <h1>Enter user</h1>
        <form action="/users" method="POST">
            <input type="text" id="username" placeholder="Username" name="username" />
            <input type="password" id="password" placeholder="Password" name="password" />
            <button type="submit">Submit</button>
        </form>
        <button id="update-button">Replace password</button>
        <button id="delete-button">delete user</button>
        <ul class="users">
            <% for(var i=0; i < body.users.length; i++) {%>
                <li class="user">
                    <!-- Output name from the iterated user object -->
                    <span>
                        <%= body.users[i].username %>
                    </span>:
                    <!-- Output quote from the iterated user object -->
                    <span>
                        <%= body.users[i].password %>
                    </span>
                </li>
                <% } %>
        </ul>
        <form action="/posts" method="POST">
            <input type="text" id="title" placeholder="Title" name="title">
            <input type="text" id="body" placeholder="Body" name="body">
            <button type="submit">Post</button>
        </form>
        <div>
					<!-- add the posts object logic here -->
					<!-- the posts should render here -->
        </div>
        <script src="/main.js"></script>
    </body>
</html>